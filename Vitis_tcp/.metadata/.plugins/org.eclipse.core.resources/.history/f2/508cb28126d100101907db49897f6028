
#include <stdio.h>
#include <string.h>
#include <stdbool.h>

#include "lwip/sockets.h"
#include "netif/xadapter.h"
#include "lwipopts.h"
#include "xil_printf.h"
#include "FreeRTOS.h"
#include "task.h"
#include "semphr.h"

#define THREAD_STACKSIZE 				1024									// The Thread stack size in bytes.
#define MAX_CONNECTIONS 				8										// Max amount of connections
#define PIXEL_SIZE_BYTES				3 				 						// RGB pixel value
#define FRAME_RESOLUTION				(320 * 240)	     						// Resolution of 1 frame
#define FRAME_BUFFER_SIZE_BYTES			(PIXEL_SIZE_BYTES * FRAME_RESOLUTION)  	// Width * Height * RGB //2048
#define FRAME_AMOUNT					3

// Port being used
u16_t echo_port = 7;

// All sockets of clients
int new_sd[MAX_CONNECTIONS];

// Counter for amount of connections
int connection_index;

// Boolean for sending data once buffer is full.
_Bool Send_Data = false;

// Global buffer for frame data, used in sending and receiving.
char Frame_Buffer[FRAME_BUFFER_SIZE_BYTES];

SemaphoreHandle_t buffer_mutex;

// Buffers for sending and writing.
char recv_buf[FRAME_BUFFER_SIZE_BYTES];
char send_buf[FRAME_BUFFER_SIZE_BYTES];

void Connection_Thread(void *p);
void Send_Thread(void *p);
void Recv_Thread(void *p);


// Connection Thread : Makes a Send or Recv thread based on user input.
void Connection_Thread(void *p)
{
	int sd = *(int *)p;
	char recv_buf[10];
	int n;
	static int Connection_Tries = 0;

	char* Welcome_Msg = "If you would like to Send data, type : Sender \r\n If you would like to Send data, type : Recv \r\n";

	size_t len = strlen(Welcome_Msg);
	send(sd,Welcome_Msg,len,0);

	while(Connection_Tries < 5)
	{
		if ((n = read(sd, recv_buf, 10)) < 0)
		{
			xil_printf("%s: error reading from socket %d, closing socket\r\n", __FUNCTION__, sd);
			break;
		}
		else
		{
			printf("Buffer = %s \r\n",recv_buf);

			if(strcmp(recv_buf,"Sender") == 0)
			{
				printf("Creating Sender Thread for %d\r\n",sd);

				sys_thread_new("Recv Thread", Recv_Thread,
								(void*)&sd,
								THREAD_STACKSIZE,
								DEFAULT_THREAD_PRIO);
				break;
			}
			else if(strcmp(recv_buf,"Recv") == 0)
			{
				printf("Creating Receiver Thread for %d\r\n",sd);

				sys_thread_new("Sender Thread", Send_Thread,
								(void*)&sd,
								THREAD_STACKSIZE,
								DEFAULT_THREAD_PRIO);
				break;
			}
			else
			{
				Connection_Tries++;
			}
		}
	}

	// Only close socket when client tried 5 times
	if(Connection_Tries >= 5)
	{
		close(sd);
	}

	vTaskDelete(NULL);
}

// Send Thread : The thread being generated for sending, this thread is created in the Connection Thread.
void Send_Thread(void *p)
{
	printf("Entered Sender Thread\r\n");
	int sd = *(int *)p;

	while(1)
	{
		if(Send_Data)
		{
			// Lock mutex and copy data to local buffer
			if(xSemaphoreTake(buffer_mutex, portMAX_DELAY) == pdTRUE)
			{
				memcpy(send_buf, Frame_Buffer, FRAME_BUFFER_SIZE_BYTES);
				xSemaphoreGive(buffer_mutex);
			}

			//printf("Sending Data to socket %d",sd);
			send(sd,send_buf,FRAME_BUFFER_SIZE_BYTES,0);
			Send_Data = false;
		}
	}

	close(sd);
	vTaskDelete(NULL);
}

// Recv Thread : The thread being generated for receiving, this thread is created in the Connection Thread.
void Recv_Thread(void *p)
{
	printf("Entered Receiver Thread\r\n");

	int sd = *(int *)p;
	int n;

	while (1)
	{
		// Receive complete frame - TCP may split it into multiple packets
		int total_received = 0;
		while(total_received < FRAME_BUFFER_SIZE_BYTES)
		{
			n = read(sd, recv_buf + total_received, FRAME_BUFFER_SIZE_BYTES - total_received);

			if (n < 0)
			{
				xil_printf("%s: error reading from socket %d\r\n", __FUNCTION__, sd);
			}
			else if (n == 0)
			{
				xil_printf("%s: connection closed by client\r\n", __FUNCTION__);
				close(sd);
				vTaskDelete(NULL);
			}

			total_received += n;
		}

		if(xSemaphoreTake(buffer_mutex, portMAX_DELAY) == pdTRUE)
		{
			memcpy(Frame_Buffer, recv_buf, FRAME_BUFFER_SIZE_BYTES);
			Send_Data = true;
			xSemaphoreGive(buffer_mutex);
		}

		/* break if client closed connection */
		if (n <= 0)
			break;
	}

	/* close connection */
	close(sd);
	vTaskDelete(NULL);
}

// Listen Thread : Listens on sockets, creates a connection thread for every client once a client connects.
void listen_thread()
{
	int sock;
	int size;

	// Create mutex for buffer protection
	buffer_mutex = xSemaphoreCreateMutex();
	if(buffer_mutex == NULL)
	{
		xil_printf("Failed to create mutex\r\n");
		return;
	}

	struct sockaddr_in address, remote;

	memset(&address, 0, sizeof(address));

	if ((sock = lwip_socket(AF_INET, SOCK_STREAM, 0)) < 0)
		return;

	address.sin_family = AF_INET;
	address.sin_port = htons(echo_port);
	address.sin_addr.s_addr = INADDR_ANY;


	if (lwip_bind(sock, (struct sockaddr *)&address, sizeof (address)) < 0)
		return;

	lwip_listen(sock, 0);

	size = sizeof(remote);

	while (1)
	{
		if ((new_sd[connection_index] = lwip_accept(sock, (struct sockaddr *)&remote, (socklen_t *)&size)) > 0)
		{
			sys_thread_new("Connection", Connection_Thread,
				(void*)&(new_sd[connection_index]),
				THREAD_STACKSIZE,
				2);
			if (++connection_index>= MAX_CONNECTIONS)
			{
				break;
			}
		}
	}
	xil_printf("Maximum number of connections reached, No further connections will be accepted\r\n");
	vTaskSuspend(NULL);
}
